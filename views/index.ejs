<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %>! Search for any question below</p>

      <form action="/results" method="POST">
        <label for="team_name">Enter a question: </label>
        <input id="team_name" type="text" name="name_field" value="">
        <!--<input type="submit" value="Search">-->

        <br>
        <label for="start_date">Choose a start date (optional): </label>
        <select class="selectpicker" data-style="btn-info" name="min_month_field">
          <optgroup label="Select a Month">
              <option name="" value="0">Select a Month</option>
              <option name="jan" value="01">January</option>
              <option name="feb" value="02">February</option>
              <option name="mar" value="03">March</option>
              <option name="apr" value="04">April</option>
              <option name="may" value="05">May</option>
              <option name="jun" value="06">June</option>
              <option name="jul" value="07">July</option>
              <option name="aug" value="08">August</option>
              <option name="sep" value="09">September</option>
              <option name="oct" value="10">October</option>
              <option name="nov" value="11">November</option>
              <option name="dec" value="12">December</option>
          </optgroup>
        </select>
        <select class="selectpicker" data-style="btn-info" name="min_day_field">
          <optgroup label="Select a Day">
              <option name="" value="0">Select a Day</option>
              <% for(var i=1; i<=31; i++) {%>
                <option name="<%= i %>" value="<%= i %>"><%= i %></option>
              <% } %>
          </optgroup>
        </select>
        <select class="selectpicker" data-style="btn-info" name="min_year_field">
          <optgroup label="Select a Year">
              <option name="" value="0">Select a Year</option>
              <% for(var i=1964; i<=2019; i++) {%>
                <option name="<%= i %>" value="<%= i %>"><%= i %></option>
              <% } %>
          </optgroup>
        </select>
        <!--<input type="submit" />-->
        <br>
        <label for="question_value">Search by question value:</label>
        <select class="selectpicker" data-style="btn-info" name="question_value">
          <option name="" value="0">Select a Value</option>
            <% for(var i=200; i<=1000; i+=200) {%>
              <option name="<%= i %>" value="<%= i %>"><%= i %></option>
            <% } %>
        </select>
        <br><input type="submit" />
      </form>

  </body>
</html>
